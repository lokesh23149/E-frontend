# ============================================
# E-Commerce Demo - Environment Variables
# ============================================

# Frontend Configuration
VITE_API_URL=https://e-backend-r993.onrender.com/

# Database Configuration (for Docker)
DB_NAME=e_com
DB_USER=ecom_user
DB_PASSWORD=ecom_password
DB_ROOT_PASSWORD=rootpassword
DB_PORT=3306

# Backend Database Connection (for docker-compose)
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/e_com?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=ecom_user
SPRING_DATASOURCE_PASSWORD=ecom_password

# Chatbot API Keys (Required for demo)
# Get free Groq key at: https://console.groq.com
GROQ_API_KEY=your-groq-api-key-here
# Optional: OpenAI (paid, requires billing)
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini

# Ports
BACKEND_PORT=8080
FRONTEND_PORT=80

# JPA Settings
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
